{
	"manifest_version" : 2,
	"name": "imgur",
	"description": "Take screenshots, add images to your imgur account and upload images from your desktop using drag and drop.",
	"version": "1.2",
	"icons": { 
		"16": "img/logo.ico",
		"48": "img/logo_48.png",
		"128": "img/logo.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"notifications",
		"http://*/*",
		"https://*/*",
		"clipboardWrite",
		"clipboardRead"
	],
	"content_security_policy": "script-src 'self' https://feather.aviary.com; object-src 'self'",
	"web_accessible_resources": [
		"img/logo.png"
	],
	"background": {
		"scripts": [
			"js/chrome_ex_oauthsimple.js",
			"js/model.js",
			"js/utils.js",
			"js/background.js"
		]
	},
	"minimum_chrome_version": "18",
	"browser_action": { "default_icon": "img/logo.ico"},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["https://api.imgur.com/oauth/authorize?oauth_token=*"],
			"js": ["js/inject/verifier.js"]
		},
		{
			"matches": ["http://*.imgur.com/"],
			"exclude_matches": ["http://www.imgur.com/"],
			"js": ["js/inject/albumMonitor.js"]
		}
	]
}